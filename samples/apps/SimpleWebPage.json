{
    "name":"SimpleWebPage",
    "description":"A simple web page",
    "packages":[
        
    ],
    "services":[
        
    ],
    "files":[
        {
            "name":"index.html",
            "owner":"root",
            "group":"root",
            "mode":"644",
            "path":"/var/www/html/index.html",
            "template":{
                "name":"index.html"
            }
        }
    ],
    "handlers":[
        {
            "do":[
                {
                    "action":"update",
                    "resource":"file://index.html"
                }
            ],
            "on":[
                "simple_web_page",
                "list_setting",
                "struct_setting"
            ]
        }
    ],
    "parameters":[
        {
            "description":"A parameter whose value is displayed",
            "key":"simple_web_page",
            "name":"Simple web page's simple parameter",
            "value":"hello"
        },
        {
            "description":"A parameter whose value is displayed",
            "key":"list_setting",
            "name":"Simple web page's list parameter",
            "value":[
                "one",
                "two",
                "three"
            ]
        },
        {
            "description":"A parameter whose value is displayed",
            "key":"struct_setting",
            "name":"Simple web page's struct parameter",
            "value":{
                "a":"a value",
                "b":"b value"
            }
        }
    ]
}