{
    "name":"WebServer",
    "description":"Apache web server",
    "packages":
    [
        {
            "name":"mod_ssl"
        },
        {
            "name":"httpd"
        }
    ],
    "services":
    [
        {
            "name":"httpd",
            "enabled":"true"
        }
    ],
    "files":
    [
        {
            "owner":"root",
            "group":"root",
            "mode":"644",
            "name":"httpd.conf",
            "path":"/etc/httpd/conf/httpd.conf",
            "template":{
                "name":"httpd.conf"
            }
        }
    ],
    "handlers":
    [
        {
            "do":[
                {
                    "action":"update",
                    "resource":"file://httpd.conf"
                },
                {
                    "action":"restart",
                    "resource":"service://httpd"
                }
            ],
            "on":[
                "httpd_port"
            ]
        }
    ],
    "parameters":
    [
        {
            "description":"The httpd port",
            "key":"httpd_port",
            "name":"Httpd Port",
            "value":"80"
        }
    ]
}